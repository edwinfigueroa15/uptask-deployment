mixin crearProyecto(proyecto = {})

    form.agregar-proyecto(action=`${proyecto.id ? '/proyectos/update/'+proyecto.id : '/proyectos/store'}` method="POST")
        .campo
            label(for="nombre") Nombre Proyecto 
            input(value=proyecto.nombre type="text" id="nombre" name="nombre" placeholder="Nombre Proyecto")

        .campo.enviar 
            input(type="submit" value=`${proyecto.nombre ? 'Actualizar' : 'Agregar'}` class="boton")