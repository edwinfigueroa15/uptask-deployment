doctype html
html(lang="en")
    head
        include partials/header

    body.login
        .contenedor-formulario
            h1= nombrePagina

            if locals.mensajes
                .alertas
                    each categoria in Object.keys(locals.mensajes)
                        each error in mensajes[categoria]
                            .alerta(class=`${categoria}`)
                                p= error

            form#formulario.caja.caja-login(method="POST" action="/iniciar-sesion")
                .campo
                    label(for="email") E-mail:
                    input(type="email" name="email" placeholder="Email" value= email required)

                .campo
                    label(for="password") Password:
                    input(type="password" name="password" placeholder="Password" value= password required)

                .campo.enviar
                    input.boton(type="submit" value="Iniciar Sesion")

                .campo.acciones
                    a(href="/crear-cuenta") Registrarme

                    a(href="/reestablecer") Olvidaste tu contrase√±a?

    script(src="/dist/bundle.js") 